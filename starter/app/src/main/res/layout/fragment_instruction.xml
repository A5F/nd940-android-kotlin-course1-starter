<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/instruction_title"
            tools:text="@string/welcome_title"
            app:layout_constraintBottom_toTopOf="@id/instruction_subtitle"
            style="@style/TxtStyle.Title"
            />

        <TextView
            android:id="@+id/instruction_subtitle"
            style="@style/TxtStyle.Subtitle"
            android:gravity="center"
            tools:text="@string/welcome_subtitle"
            />

        <Button
            android:id="@+id/btn_go_forward"
            style="@style/BtnStyle"
            android:text="PROCEDI"
      />


    </LinearLayout>

</layout>